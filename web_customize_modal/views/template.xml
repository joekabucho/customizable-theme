<odoo>
    <template id="web_customize_modal assets" name="Web Customize Modal" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <link rel="stylesheet" type="text/less" href="/web_customize_modal/static/src/less/colors/colors.less" t-ignore="true"/>
            <link rel="stylesheet" type="text/less" href="/web_customize_modal/static/src/less/color_option.less" t-ignore="true"/>
            <link rel="stylesheet" type="text/less" href="/web_customize_modal/static/src/less/font_option.less" t-ignore="true"/>
            <link rel="stylesheet" type="text/less" href="/web_customize_modal/static/src/less/variables.less" t-ignore="true"/>
        </xpath>
    </template>

    <template id="web_customize_modal_options_common_js" name="Customize Js" inherit_id="web.assets_backend">
        <xpath expr="." position="inside">
            <script type="text/javascript" src="/web_customize_modal/static/src/js/switcher.js"/>
        </xpath>
    </template>

    <!-- Colors  -->
    <template id="colors_default" name="option_colors_default" inherit_id="web.assets_backend" active="True" >
        <xpath expr="." position="inside">
            <link href="/web_customize_modal/static/src/less/colors/default.less"
                  rel="stylesheet" type="text/less" />
        </xpath>
    </template>

    <template id="colors_blue" name="option_colors_blue" inherit_id="web.assets_backend" active="False" >
